<% include ../partials/header %>

<div class="container">
    <h1 style="text-align:center">Edit <%=campground.name%></h1>
    <div style="width:35%; margin:25px auto">
        <form method="POST" action="/campgrounds/<%= campground._id %>?_method=PUT">
            <div class="form-group">
                <input class="form-control" type="text" value="<%=campground.name%>" name="camp[name]">
            </div>
            <div class="form-group">
                <input class="form-control" type="number" value="<%=campground.price%>" name="camp[price]" min="0.01" step="0.01">
            </div>
            <div class="form-group">
                <input class="form-control" type = "text" value= "<%=campground.image%>" name="camp[image]">
            </div>
            <div class="form-group">
                <input class="form-control" type = "text" value= "<%=campground.description%>" name="camp[description]">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>    
        <a href="/campgrounds/<%=campground._id%>">GO BACK</a>    
    </div>
</div>

<% include ../partials/footer %>