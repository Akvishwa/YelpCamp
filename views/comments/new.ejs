<% include ../partials/header %>

<div class="container">
    <h1 style="text-align:center">Add new Comment to <%= campground.name %></h1>
    <div style="width:35%; margin:25px auto">
        <form method="POST" action="/campgrounds/<%= campground._id %>/comments">
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Text" name="comment[text]">
            </div>
            
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>    
        <a href="/campgrounds">GO BACK</a>    
    </div>
    

</div>

<% include ../partials/footer %>